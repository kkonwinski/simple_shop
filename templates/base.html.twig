<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a href="{{ path('product_index') }}" class="navbar-brand">Home</a>
            </li>
            {% if app.user %}

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('product_new') }}" class="btn btn-info">Add new product</a>
                        <a class="dropdown-item" href="{{ path('warehouse_new') }}" class="btn btn-info">Add new</a>

                    </div>
                </li>
            {% endif %}

        </ul>
        <div class="user-nav d-flex  align-items-center">
            {% if app.user %}
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown ">
                        {#                        <span class="fa fa-user-circle-o"></span>#}
                        <a class="nav-link dropdown-toggle fa fa-user-circle-o" href="#" id="navbarDropdown"
                           role="button"
                           data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            {{ app.user.email }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('app_logout') }}" class="btn btn-info">Logout</a>
                        </div>
                    </li>
                </ul>
                <div class="nav-item  align-items-center shopping-cart-ico">
                    <a class="fa fa-shopping-cart" href="{{ path('cart') }}"> ({{ app.session.get('cart')|length }})</a>
                </div>
            {% else %}
                <a class="" href="{{ path('app_register') }}" class="btn btn-info">Registry</a>
                <a class="" href="{{ path('app_login') }}" class="btn btn-info">Login</a>
            {% endif %}
        </div>

