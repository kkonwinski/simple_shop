{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}


    <div class="col-md-12">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#product" role="tab"
                   aria-controls="product" aria-selected="true">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#info" role="tab" aria-controls="info"
                   aria-selected="false">Account Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#orders" role="tab" aria-controls="orders"
                   aria-selected="false">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#warehouses" role="tab"
                   aria-controls="warehouses" aria-selected="false">Warehouses</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="product" role="tabpanel" aria-labelledby="home-tab">
                <ul>
                    {% for user in users.products %}
                        <li>
                            <h5><a href="{{ path('edit_product',{'id':user.id}) }}">{{ user.id }} {{ user.name }}
                                    , {{ user.price }}, {{ user.quantity }}
                                </a></h5>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="profile-tab">

                {{ form_start(userInfo) }}
                {{ form_end(userInfo) }}
            </div>
            <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="contact-tab">...</div>
            <div class="tab-pane fade" id="warehouses" role="tabpanel" aria-labelledby="contact-tab">...</div>
        </div>
    </div>

{% endblock %}
